import datetime  # libreria para la funcion "datetime.now().year"

nom_usuari = input("Introdueix el teu nom: ")

any_naixement = input("Introdueix l'any de naixement: ")
# convertir a numero entero
any_naixement = int(any_naixement)

# calcular edad actual
any_actual = datetime.datetime.now().year  # funcion para que el año se autoactualice, en vez de escribir "2023", y que dentro de un año el programa no funcione.
edat = any_actual - any_naixement

print(f"Bon dia, {nom_usuari}, tens {edat} anys.")
